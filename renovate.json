{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ],
  "prHourlyLimit": 0,
  "ignoreTests": true,
  "ignorePaths": ["**/Ansible/**", "**/cookiecutter/**"]
}
